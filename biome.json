{
  "$schema": "https://biomejs.dev/schemas/2.2.5/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true,
    "defaultBranch": "main"
  },
  "files": {
    "ignoreUnknown": true,
    "includes": [
      "**/*.ts",
      "**/*.tsx",
      "**/*.css",
      "!**/.next",
      "!**/.turbo",
      "!**/_generated",
      "!**/dist"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "useImportType": "off",
        "noNonNullAssertion": "off"
      },
      "a11y": {
        "useSemanticElements": "off",
        "useFocusableInteractive": "off",
        "noRedundantRoles": "off",
        "useKeyWithClickEvents": "off",
        "useAriaPropsForRole": "off"
      },
      "correctness": {
        "useExhaustiveDependencies": "warn",
        "noNestedComponentDefinitions": "off",
        "noInvalidPositionAtImportRule": "off",
        "noUnusedImports": "error"
      },
      "suspicious": {
        "noArrayIndexKey": "off",
        "noDoubleEquals": "off",
        "noExplicitAny": "off",
        "noDocumentCookie": "off",
        "noUnknownAtRules": "off"
      },
      "security": {
        "noDangerouslySetInnerHtml": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double"
    }
  },
  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "organizeImports": "off"
      }
    }
  },
  "overrides": [
    {
      "includes": ["apps/workers/**/*.ts"],
      "linter": {
        "rules": {
          "correctness": {
            "useImportExtensions": {
              "level": "error",
              "options": {
                "forceJsExtensions": true
              }
            }
          }
        }
      }
    }
  ]
}
