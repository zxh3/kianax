{
  "name": "kianax",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "concurrently --kill-others --names \"temporal,turbo\" -c \"blue,magenta\" \"bun run dev:temporal\" \"bun run dev:apps\"",
    "dev:temporal": "temporal server start-dev",
    "dev:apps": "turbo run dev",
    "lint": "turbo run lint",
    "format": "biome format --write .",
    "typecheck": "turbo typecheck",
    "prepare": "simple-git-hooks"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.5",
    "concurrently": "^9.2.1",
    "lint-staged": "^16.2.6",
    "simple-git-hooks": "^2.13.1",
    "turbo": "^2.5.8",
    "typescript": "5.9.2"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "bun@1.2.23",
  "simple-git-hooks": {
    "pre-commit": "bunx lint-staged"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,css}": "biome check --staged --no-errors-on-unmatched",
    "*.{ts,tsx}": "bash -c 'turbo run typecheck --filter=...[HEAD]'"
  }
}
